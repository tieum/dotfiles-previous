# Pulse Audio controls
set $active_sink $(pacmd list-sinks | grep \* | awk '{print $3}')
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume $active_sink +5% && pkill -RTMIN+10 i3blocks #increase sound volume
bindsym XF86AudioLowerVolume exec pactl set-sink-volume $active_sink -5% && pkill -RTMIN+10 i3blocks #decrease sound volume
bindsym XF86AudioMute exec pactl set-sink-mute $active_sink toggle && pkill -RTMIN+10 i3blocks # mute sound
